# eza (modern ls)
alias ls='eza --group-directories-first --icons=auto'
alias ll='eza -lh --group-directories-first --icons=auto --git --total-size'
alias la='eza -lah --group-directories-first --icons=auto --git --total-size'
alias lt='eza -lah --tree --level=3 --group-directories-first --icons=auto --git --total-size'

