{
  "code-runner.runInTerminal": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "files.autoSave": "afterDelay",
  "workbench.editorAssociations": {
    "*.bin": "hexEditor.hexedit",
    "*.pdf": "pdf.preview"
  },
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "maven.terminal.useJavaHome": true,
  "git.autofetch": true,
  "security.workspace.trust.untrustedFiles": "open",
  "git.confirmSync": false,
  "git.path": "C:\\Users\\nikgr\\AppData\\Local\\GitHubDesktop\\app-3.0.0\\resources\\app\\git\\cmd",
  "diffEditor.ignoreTrimWhitespace": false,
  /* vim */
  "editor.lineNumbers": "relative",
  "vim.history": 500,
  "vim.leader": "<Space>",
  "vim.hlsearch": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    // NAVIGATION
    // switch b/w buffers
    {
      "before": ["<S-h>"],
      "commands": [":bprevious"]
    },
    {
      "before": ["<S-l>"],
      "commands": [":bnext"]
    },
    // splits
    {
      "before": ["leader","v"],
      "commands": [":vsplit"]
    },
    {
      "before": ["leader","s"],
      "commands": [":split"]
    },
    // panes
    {
      "before": ["leader","h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader","j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader","k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader","l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    // NICE TO HAVE
    {
      "before": ["leader","w"],
      "commands": [":w!"]
    },
    {
      "before": ["leader","q"],
      "commands": [":q!"]
    },
    {
      "before": ["leader","x"],
      "commands": [":x!"]
    },
    {
      "before": ["[","d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]","d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>","c","a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["leader","f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["leader","p"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": [
        "g","h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    {
      "before": ["<C-b>"],
      "commands": ["editorScroll",
        {
          "to": "up",
          "by": "page",
          "revealCursor": false
        }]
    },
    {
      "before": ["<C-f>"],
      "commands": ["editorScroll",
        {
          "to": "down",
          "by": "page",
          "revealCursor": false
        }]
    },
    {
      "before": ["<C-u>"],
      "commands": ["editorScroll",
        {
          "to": "up",
          "by": "halfPage",
          "revealCursor": false
        }]
    },
    {
      "before": ["<C-d>"],
      "commands": ["editorScroll",
        {
          "to": "down",
          "by": "halfPage",
          "revealCursor": false
        }]
    },
    {
      "before": ["J"],
      "commands": ["select"]
    },
    //disable vim undo and redo keybinds
    {
      "before": ["u"],
      "commands": []
    },
    {
      "before": ["<C-r>"],
      "commands": []
    }
  ],
  "vim.visualModeKeyBindings": 
  [
    // Stay in visual mode while indenting
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    // Move selected lines while staying in visual mode
    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"]
    },
    // toggle comment selection
    {
      "before": ["leader","c"],
      "commands": ["editor.action.commentLine"]
    }
  ],
  "vim.insertModeKeyBindings": 
  [
    {

    }
  ],
  // "editor.minimap.enabled": false
  
  "vim.handleKeys": 
  {
    "<C-p>": false, // disable ctrl + p vim shortcut (it is used by vscode to open a file)      
    "<C-c>": false, // disable ctrl + c vim shortcut so copy can work
    "<C-v>": false, // disable ctrl + v vim shortcut so paste can work
    "<C-k>": false  // disable ctrl + k vim shortcut so vscode chords can work (eg ctrl k ctrl o)
  },
  "git.suggestSmartCommit": false,
  "markdown-preview-enhanced.previewTheme": "github-dark.css"
}